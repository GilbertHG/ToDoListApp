<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.detail.detailActivity">

    <TextView
        android:id="@+id/strTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Title: "
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/strTitle"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Value Title Goes Here..."/>

    <TextView
        android:id="@+id/strContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Detail: "
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/title"/>

    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/strContent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:text="Value Title Goes Here..."/>

    <TextView
        android:id="@+id/createdDate"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/content"
        android:layout_marginLeft="20dp"
        android:text="Created Date"/>

    <TextView
        android:id="@+id/dueDate"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/content"
        android:layout_marginLeft="20dp"
        android:text="Due Date"
        android:layout_toRightOf="@id/createdDate"/>

    <TextView
        android:id="@+id/updatedDate"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/content"
        android:layout_marginLeft="20dp"
        android:text="Last Update"
        android:layout_toRightOf="@id/dueDate"/>
</RelativeLayout>